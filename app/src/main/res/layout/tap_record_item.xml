<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <TextView
            android:text="234"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tapCountView"
            app:layout_constraintStart_toEndOf="@+id/rankNView" android:layout_marginStart="56dp"
            app:layout_constraintBottom_toBottomOf="@+id/rankNView" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/rankNView" android:layout_marginBottom="8dp"
            android:textSize="18sp"/>
    <TextView
            android:text="123454534"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/timestampView"
            app:layout_constraintTop_toTopOf="@+id/tapCountView"
            app:layout_constraintBottom_toBottomOf="@+id/tapCountView" android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/rankNView" android:layout_marginStart="118dp"
            app:layout_constraintVertical_bias="1.0"/>
    <TextView
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rankNView" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" android:layout_marginTop="8dp" android:textSize="18sp"
            android:textStyle="bold"/>
</android.support.constraint.ConstraintLayout>